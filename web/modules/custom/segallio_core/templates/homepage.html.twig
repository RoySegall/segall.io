<div class="container">
  <div class="section">

    <div class="row">
      <div class="col s12 center">
        <h3><i class="mdi-content-send brown-text"></i></h3>
        <h4>See what i'm doing on the web</h4>
      </div>
    </div>

  </div>

  {% verbatim %}
    <section id="timeline">
      <div class="center social-buttons">
        <i class="fab fa-facebook-square"></i>
        <i class="fab fa-twitter-square"></i>
        <i class="fab fa-instagram"></i>
        <i class="fab fa-github"></i>
      </div>

      <div class="demo-card-wrapper">
        <div v-for="(post, index) in posts" class="demo-card" v-bind:class="
          {
            'demo-card--step1': (index + 1) % 1 == 0,
            'demo-card--step2': (index + 1) % 2 == 0,
            'demo-card--step3': (index + 1) % 3 == 0,
            'demo-card--step4': (index + 1) % 4 == 0,
            'demo-card--step4': (index + 1) % 4 == 0,
            'demo-card--step5': (index + 1) % 5 == 0,
          }
          ">
          <div class="head">
            <div class="number-box">
              <span>01</span>
            </div>
            <h2><span class="small">Subtitle</span> {{index}}</h2>
          </div>
          <div class="body">
            {{ post.text }}
          </div>
        </div>

    </section>
  {% endverbatim %}

