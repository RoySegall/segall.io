body{font-size:16px;padding-top:1em;font-family:muli,sans-serif}.header img{max-width:50%}.header h2{font-family:poiret one,cursive;padding-top:1em;padding-bottom:.5em;color:#6acff1;text-transform:uppercase;letter-spacing:.25em}.header hr{background:#f7b75e;width:75%}.body-wrapper{padding:1em;border-radius:.25em}.who-am-i,.professional-info{padding-top:2em}.who-am-i h3,.professional-info h3{font-size:2em;font-family:coiny,cursive;color:#6acff1}.who-am-i .profile-pic,.professional-info .profile-pic{border:solid 1px #f7b75e}.who-am-i ul,.professional-info ul{padding:0;padding-top:.5em}.who-am-i ul li,.professional-info ul li{display:inline;padding-right:1em}.who-am-i ul li i,.professional-info ul li i{font-size:1.5em;color:#0090c1;-webkit-transition:color .5s;transition:color .5s}.who-am-i ul li i:hover,.professional-info ul li i:hover{color:#f7b75e}.who-am-i .intro,.professional-info .intro{padding-top:.25em;font-size:1.25em}